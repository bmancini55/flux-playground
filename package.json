{
  "name": "flux-playground",
  "version": "0.1.0",
  "description": "Testing flux pattern with backbone and jade",
  "main": "index.js",
  "scripts": {
    "watch": "npm run watch-client",
    "watch-client": "watchify -o client/js/bundle.js -v -d client/js/app.js",
    "build": "npm run build-client & npm run build-jade",
    "build-client": "browserify -o client/js/bundle.js -v -d client/js/app.js",
    "start": "NODE_PATH=./ node index.js"
  },
  "author": "Brian <bmancini@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "babel-runtime": "^5.8.20",
    "backbone": "^1.2.1",
    "express": "^4.13.3",
    "flux": "^2.0.3",
    "jade": "^1.11.0",
    "lodash": "^3.10.1",
    "react": "^0.13.3",
    "serve-static": "^1.10.0",
    "superagent": "^1.3.0"
  },
  "devDependencies": {
    "babel": "^5.8.21",
    "babel-eslint": "^4.0.5",
    "babelify": "^6.1.3",
    "browserify": "^11.0.1",
    "jade": "^1.11.0",
    "jadeify": "^4.4.0",
    "reactify": "^1.1.1",
    "watchify": "^3.3.1"
  },
  "browserify": {
    "transform": [
      [
        "babelify",
        {
          "optional": [
            "runtime"
          ]
        }
      ],
      "reactify",
      "jadeify"
    ]
  }
}
